<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="iti_students_tree" model="ir.ui.view">
            <field name="name">iti.students</field>
            <field name="model">iti.students</field>
            <field name="arch" type="xml">
                <tree string="student">
                <field name="name"/>
                <field name="age"/>
                <field name="faculty"/>
                <field name="education"/>
                <field name="graduation_year"/>
                <field name="grade"/>
                <field name="salary"/>
                <field name="info"/>
                <field name="signature"/>
                <field name="department_id"/>
                <field name="skills_id"/>
                </tree>
            </field>
        </record>

        <record id="iti_students_form" model="ir.ui.view">
            <field name="name">iti.students</field>
            <field name="model">iti.students</field>
            <field name="arch" type="xml">
                <form string="student">
                <!--<button name="%(iti2_action)d" string="depts" type="action"/>-->
                <!--<button name="%(iti3_action)d" string="skills" type="action"/>-->
                <button name="func1" string="selected" type="object"/>
                <field name="name"/>
                <field name="age"/>
                <field name="faculty"/>
                <field name="education"/>
                <field name="graduation_year"/>
                <field name="grade"/>
                <field name="salary"/>
                <field name="info"/>
                <field name="signature"/>
                <field name="department_id" on_change="onchangeee(department_id)"/>
                <field name="skills_id" on_change="onchangee(skills_id)"/>
                </form>
            </field>
        </record>

 <record id="iti_depts_form" model="ir.ui.view">
            <field name="name">iti.depts</field>
            <field name="model">iti.department</field>
            <field name="arch" type="xml">
                <form string="depts">
                <field name="name"/>
                <field name="skill_id"/>

                </form>
            </field>
        </record>


        <record id="iti_depts_tree" model="ir.ui.view">
            <field name="name">iti.depts</field>
            <field name="model">iti.department</field>
            <field name="arch" type="xml">
                <tree string="depts">
                <field name="name"/>
                <field name="skill_id"/>
                </tree>
            </field>
        </record>



         <record id="iti_skills_form" model="ir.ui.view">
            <field name="name">iti.skills</field>
            <field name="model">iti.skills</field>
            <field name="arch" type="xml">
                <form string="skills">
                <field name="name"/>

                </form>
            </field>
        </record>

         <record id="iti_skills_tree" model="ir.ui.view">
           <field name="name">iti.skills</field>
            <field name="model">iti.skills</field>
            <field name="arch" type="xml">
                <tree string="skills">
                <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="iti_action">
            <field name="name">iti.students.info</field>
            <field name="res_model">iti.students</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

         <record model="ir.actions.act_window" id="iti2_action">
            <field name="name">iti.dept.info</field>
            <field name="res_model">iti.department</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record model="ir.actions.act_window" id="iti3_action">
            <field name="name">iti.skills.info</field>
            <field name="res_model">iti.skills</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="iti" name="ITI"/>
        <menuitem id="iti2" name="ITI Student" parent="iti"/>
        <menuitem id="iti3" name="Student" parent="iti2" action="iti_action"/>
         <menuitem id="iti4" name="depts" parent="iti2" action="iti2_action"/>
         <menuitem id="iti5" name="skills" parent="iti2" action="iti3_action"/>
    </data>
</openerp>
